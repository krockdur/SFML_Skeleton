{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ générer le fichier actif",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/../build/${fileBasenameNoExtension}",
                "-I/Users/krock/Dev/libs/SFML-3.0.2/include",
                "-L/Users/krock/Dev/libs/SFML-3.0.2/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-std=c++17",
                "-Wl,-rpath,@executable_path"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Tâche générée par le débogueur.",
            
        }
    ],
    "version": "2.0.0"
}